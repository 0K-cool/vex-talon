{
  "description": "Vex-Talon: 20-layer defense-in-depth security for Claude Code",
  "hooks": {
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bun run ${CLAUDE_PLUGIN_ROOT}/packages/core/src/hooks/L0-secure-code-enforcer.ts",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "bun run ${CLAUDE_PLUGIN_ROOT}/packages/core/src/hooks/L1-governor-agent.ts",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "bun run ${CLAUDE_PLUGIN_ROOT}/packages/core/src/hooks/L3-memory-validation.ts",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "bun run ${CLAUDE_PLUGIN_ROOT}/packages/core/src/hooks/L9-egress-scanner.ts",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "bun run ${CLAUDE_PLUGIN_ROOT}/packages/core/src/hooks/L14-supply-chain-pre-install.ts",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "bun run ${CLAUDE_PLUGIN_ROOT}/packages/core/src/hooks/L19-skill-scanner.ts",
            "timeout": 5000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bun run ${CLAUDE_PLUGIN_ROOT}/packages/core/src/hooks/L2-secure-code-linter.ts",
            "timeout": 10000
          },
          {
            "type": "command",
            "command": "bun run ${CLAUDE_PLUGIN_ROOT}/packages/core/src/hooks/L4-injection-scanner.ts",
            "timeout": 10000
          },
          {
            "type": "command",
            "command": "bun run ${CLAUDE_PLUGIN_ROOT}/packages/core/src/hooks/L5-output-sanitizer.ts",
            "timeout": 10000
          },
          {
            "type": "command",
            "command": "bun run ${CLAUDE_PLUGIN_ROOT}/packages/core/src/hooks/L7-image-safety-scanner.ts",
            "timeout": 10000
          },
          {
            "type": "command",
            "command": "bun run ${CLAUDE_PLUGIN_ROOT}/packages/core/src/hooks/L14-supply-chain-scanner.ts",
            "timeout": 10000
          },
          {
            "type": "command",
            "command": "bun run ${CLAUDE_PLUGIN_ROOT}/packages/core/src/hooks/L17-spend-alerting.ts",
            "timeout": 10000
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/packages/core/src/hooks/onboarding.sh",
            "timeout": 3000
          },
          {
            "type": "command",
            "command": "bun run ${CLAUDE_PLUGIN_ROOT}/packages/core/src/hooks/L12-least-privilege.ts",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "bun run ${CLAUDE_PLUGIN_ROOT}/packages/core/src/hooks/L3-auto-memory-guardian.ts",
            "timeout": 5000
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bun run ${CLAUDE_PLUGIN_ROOT}/packages/core/src/hooks/stop-security-report.ts",
            "timeout": 30000
          }
        ]
      }
    ]
  }
}
